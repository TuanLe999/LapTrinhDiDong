<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="122dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/nameproduct"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/aldrich"
        android:text="ProductName"
        android:textAlignment="gravity"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusproduct"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/aldrich"
        android:text="ProductName"
        android:textAlignment="gravity"
        android:textStyle="normal|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameproduct" />

    <TextView
        android:id="@+id/priceproduct"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/aldrich"
        android:gravity="right"
        android:text="1000"
        android:textAlignment="viewStart"
        android:textColor="#F60505"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/saleproduct"
        app:layout_constraintTop_toBottomOf="@+id/statusproduct" />

    <TextView
        android:id="@+id/saleproduct"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/aldrich"
        android:text="TextView"
        android:textColor="#EC1A1A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusproduct" />
</androidx.constraintlayout.widget.ConstraintLayout>